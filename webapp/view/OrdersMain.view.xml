<mvc:View controllerName="com.ui5.train.orders.controller.OrdersMain"
    	height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:svm="sap.ui.comp.smartvariants">
		<f:DynamicPage headerExpanded="{/headerExpanded}">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
					</f:heading>
					<f:expandedContent>
						<Label id="expandedLabel" text="No filters active" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="No filters active" />
					</f:snappedContent>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search="onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="OrderID" label="{i18n>orderMain.Filter.OrderNumber}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
                                    <Input  id="ordersInput"
                                            placeholder="{i18n>orderMain.Filter.OrderNumber}" />													
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="CreationDate" label="{i18n>orderMain.Filter.CreationDate}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>	
                                    <DateRangeSelection
                                                id="DRS1"
                                                class="DRS1"
                                                value= "{
                                                    'type': 'sap.ui.model.type.DateInterval',
                                                    'formatOptions': {
                                                        'pattern': 'yyyy/MM/dd'
                                                    },
                                                    'parts': [
                                                        {
                                                            'type': 'sap.ui.model.type.Date',
                                                            'path': '/start'
                                                        },
                                                        {
                                                            'type': 'sap.ui.model.type.Date',
                                                            'path': '/end'
                                                        }
                                                    ]
                                                }"
                                                change="handleChange"/>				                    
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Status" label="{i18n>orderMain.Filter.Status}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox id="statusBox"
											name="Status"
											selectionChange=".onSelectionChange"
											items="{status>/Status}"
										>											
											<core:Item key="{status>StatusID}" text="{status>Status}" />
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>            
			<f:content>            
				<Table
					id="ordersTable"
					inset="false"
                    mode="MultiSelect"                    
                    selectionChange="onSelectItem"					
					items="{orderdetails>/Orders}"

				    



				>
				<headerToolbar>                    
					<OverflowToolbar id="otbSubheader">
                        <Title text="{i18n>orderMain.TableTitle}" level="H2"/>
						<ToolbarSpacer/>												
						<OverflowToolbarButton tooltip="{i18n>button.Create}" type="Transparent" text="Add" icon="sap-icon://add" press="onAdd"/>
						<OverflowToolbarButton tooltip="{i18n>button.Delete}" type="Transparent" text="Delete" icon="sap-icon://delete" press="onDelete"/>						
					</OverflowToolbar>
				</headerToolbar>                
					<columns>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>orders.OrderNumber}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="C{i18n>orders.CreationDate}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>orders.ReceivingPlant}"/>
						</Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>orders.DeliveringPlant}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>orders.Status}"/>
						</Column>                        
					</columns>
					<items>
						<ColumnListItem vAlign="Middle"  type="Navigation" id="orderList" press="onPressOrder">
							<cells>
								<ObjectIdentifier title="{orderdetails>OrderID}" />
								<Text text="{orderdetails>OrderDate}" />
								<Text text="{= ${orderdetails>ReceivingPlantID} + ' - ' + ${orderdetails>ReceivingPlantText} }" />
                                <Text text="{= ${orderdetails>DeliveringPlantID} + ' - ' + ${orderdetails>DeliveringPlantText} }" />
								<ObjectStatus
									class="sapUiSmallMarginBottom"
									text="{orderdetails>Status}"
									inverted="false"
									state="{orderdetails>StatusState}" />								                                
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
		</f:DynamicPage>
</mvc:View>