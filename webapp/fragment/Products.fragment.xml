<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="productDialog"
        title="Select Product"
        contentHeight="55%"
        contentWidth="60%">
        <VBox>
            <SearchField
                placeholder="Search Product Name..."
                liveChange=".onProductSearch"
                width="100%" />
            <Table
                id="idProductSelectTable"
                mode="SingleSelectLeft"
                items="{productsData>/Products}">
                <columns>
                    <Column>
                        <Text text="Product ID" />
                    </Column>
                    <Column>
                        <Text text="Product Name" />
                    </Column>
                    <Column hAlign="Center">
                        <Text text="Price Per Quantity" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{productsData>ProductID}" />
                            <Text text="{productsData>ProductName}" />
                            <Text text="{productsData>PricePerQty}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
        <beginButton>
            <Button text="Select" press=".onProductSelectConfirm"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCloseProductDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
